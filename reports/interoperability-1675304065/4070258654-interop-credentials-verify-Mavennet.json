      {
        "id": "78b7881e-f3ce-4a0f-991b-86f75b1446d2",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
