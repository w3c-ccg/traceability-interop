      {
        "id": "43000625-198f-4a89-8a70-8477aa6ef8ef",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
