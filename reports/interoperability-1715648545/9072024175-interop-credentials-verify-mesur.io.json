      {
        "id": "0d39cb6d-d2b0-49ac-aeca-2465bf08b717",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
