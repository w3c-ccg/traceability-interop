      {
        "id": "5cdc7d44-e995-4920-b9ff-b00b15f39d2c",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
