        "id": "034b2a9a-3187-439f-ac8a-812ed4e1a1ff",
        "name": "Get Organization DIDs (Issuer)",
        "request": {
          "url": {
            "path": [
              "identifiers",
              "{{ISSUER_ORGANIZATION_DID_WEB}}"
