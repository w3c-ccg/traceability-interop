      {
        "id": "e5f0a2bf-e55d-48e2-a458-1cdeb964dc69",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
