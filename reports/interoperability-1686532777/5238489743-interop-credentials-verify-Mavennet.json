      {
        "id": "522afb0a-7af1-42a8-85a4-962f6bd785b8",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
