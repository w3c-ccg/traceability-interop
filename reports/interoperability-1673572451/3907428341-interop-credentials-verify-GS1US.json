      {
        "id": "8090eed0-f494-4af2-b58e-3fc7536e0e2c",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
