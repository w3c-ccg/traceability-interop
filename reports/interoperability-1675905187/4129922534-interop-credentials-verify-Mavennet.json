      {
        "id": "161e5664-1b96-4023-915c-0339d1847c40",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
