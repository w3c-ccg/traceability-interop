      {
        "id": "f6700675-a480-4993-9fc8-ce812f5a06ba",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
