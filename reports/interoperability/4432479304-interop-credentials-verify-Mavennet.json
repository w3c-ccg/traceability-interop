      {
        "id": "ac4c6c4d-b33b-44ce-8857-d06f7b334ebf",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
