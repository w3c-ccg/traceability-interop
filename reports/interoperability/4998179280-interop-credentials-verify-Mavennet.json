      {
        "id": "e73126d4-be54-49a1-b43f-93998adf7541",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
