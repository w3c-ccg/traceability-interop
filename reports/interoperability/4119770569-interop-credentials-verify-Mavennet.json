      {
        "id": "ffe0e5bb-8185-4217-9aea-563199fe3b5f",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
