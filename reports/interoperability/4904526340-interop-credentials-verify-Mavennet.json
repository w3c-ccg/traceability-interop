      {
        "id": "8e49d5c3-cffd-4c8e-9a77-7b970c80d3ff",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
