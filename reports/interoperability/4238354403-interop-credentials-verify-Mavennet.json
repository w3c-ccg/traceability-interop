      {
        "id": "b3bec737-3ce7-4ed3-9dcd-de4b75e75ae2",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
