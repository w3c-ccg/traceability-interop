      {
        "id": "b67c0af8-5a96-4cca-b736-b2637023509f",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
