      {
        "id": "2418a456-52a6-4343-bf2d-214739626f67",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
