      {
        "id": "ee1cb6cf-a28b-4dd2-9580-9498aa124d21",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
