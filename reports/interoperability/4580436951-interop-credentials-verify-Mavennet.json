      {
        "id": "b50d4bfd-afd9-4f17-b8e5-bf5052a9ca3c",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
