      {
        "id": "bc9fc2e1-dd5d-4231-9487-853c192db11a",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
