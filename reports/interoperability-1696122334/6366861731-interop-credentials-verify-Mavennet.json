      {
        "id": "db8ee369-f830-4108-b0b5-3f0522a61882",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
